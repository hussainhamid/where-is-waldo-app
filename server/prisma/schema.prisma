datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    userId   Int    @default(autoincrement())
    id       String @id @default(uuid())
    username String @unique
    password String
    score    Int    @default(0)
    status   Role   @default(USER)
}

model Image {
    imageId    Int          @default(autoincrement())
    id         String       @id @default(uuid())
    imageUrl   String
    characters Characters[]
}

model Characters {
    characterId Int    @default(autoincrement())
    id          String @id @default(uuid())
    name        String @unique
    Image       Image  @relation(fields: [imageId], references: [id])
    imageId     String
    x           Float
    y           Float
}

enum Role {
    ADMIN
    USER
}
